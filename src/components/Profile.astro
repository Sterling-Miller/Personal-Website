---

<div>
  <Image
    class="image-profile"
    src={profile.image}
    alt={profile.name}
    width={200}
    height={200}
    loading="eager"
  />

  <h1 class="text-xl font-bold">{profile.name}</h1>
  <p class="subtext">{profile.title}</p>
  <p class="subtext">{profile.location}</p>
  <div class="mt-4 flex gap-2 items-center">
    <a
      href={profile.resume.path}
      target="_blank"
      download="resume.pdf"
      class="resume-button"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5"
        viewBox="0 0 512 512"
      >
        <title>{profile.resume.text}</title>
        <path d={profile.resume.icon}> </path>
      </svg>
      <span class="text-2sm">{profile.resume.text}</span>
    </a>

    {
      profile.links.map((link) => (
        <a href={link.href} target="_blank">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="social-button"
            viewBox={link.viewbox}
          >
            <title>{link.title}</title>
            <path d={link.icon} />
          </svg>
        </a>
      ))
    }
  </div>
</div>
