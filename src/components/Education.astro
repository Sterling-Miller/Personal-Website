---
import { Image } from "astro:assets";

const education = [
  {
    degree: "Bachelor of Science in Computer Science",
    institution: "University of Oregon, Eugene, OR",
    duration: "September 2019 – June 2025",
    logo: "/images/great-seal-one-color-uo-green-800x800@1x.webp",
  },
];

const course_work = [
  {
    title: "Class 1",
    description: "Description of class 1",
  },
  {
    title: "Class 2",
    description: "Description of class 2",
  },
];
---

<div class="max-w-4xl mx-auto p-4 leading-relaxed">
  <h1 class="text-2xl font-bold mb-6">Education</h1>

  {
    education.map((edu) => (
      <div
        class="
      bg-[#252525] p-4 flex 
      border-[#154733] border-l-4 md:border-l-4 
      rounded-[10px] 
      transition-transform hover:translate-y-[-10px]
      text-sm md:text-lg
    "
      >
        <div class="flex-shrink-0 w-[100px] h-[100px] mr-4 rounded-full overflow-hidden">
          <Image
            class="w-full h-full object-cover"
            src={edu.logo}
            alt={`${edu.institution} Logo`}
            width={100}
            height={100}
            loading="eager"
          />
        </div>

        <div class="edu-info">
          <h3 class="m-0 py-2 font-bold">{edu.degree}</h3>
          <div>
            <p class="text-[#aaa]">{edu.institution}</p>
            <p class="text-[#aaa]">{edu.duration}</p>
          </div>
        </div>

        {/* <div class="mt-auto py-2 text-[#aaa] cursor-pointer text-[0.95rem] hover:text-[#fff] transition-colors duration-300 self-end ml-auto">▼ Units</div> */}
      </div>
    ))
  }
</div>
