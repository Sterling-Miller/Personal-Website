---
const credentials = [
  {
    name: "Rapid Application Development with Large Language Models (LLMs)",
    corporation: "Nvidia",
    obtained: "August 2025",
    website: "https://learn.nvidia.com/certificates?id=3ydIhtkvRnyFyBzE6CwUSg",
    credentialId: "0NuwUiBSRImDf3HRVWbhsw"
  },
  {
    name: "Getting Started with Deep Learning",
    corporation: "Nvidia",
    obtained: "July 2025",
    website: "https://learn.nvidia.com/certificates?id=a0hiPwKwSayH3rdrXiBicg",
    credentialId: "M0S7oiZMQcO9R966P9O6-Q"
  }
];
---

<div class="max-w-4xl mx-auto p-4 font-mono leading-relaxed">
  <h2 class="text-2xl font-bold mb-6">Credentials</h2>
  <div class="grid grid-cols-1 gap-6">
    {credentials.map((cred) => (
      <div class="
        bg-[#252525] p-4 
        border-[#154733] border-l-4 
        rounded-[10px] 
        transition-transform hover:translate-y-[-10px]
        text-sm md:text-lg
      ">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <h3 class="font-semibold">{cred.name}</h3>
            <div class="flex justify-between items-center">
              <div>
                <p class="text-sm text-[#aaa]">{cred.corporation}</p>
                <p class="text-sm text-[#aaa]">{cred.obtained}</p>
              </div>
              <div class="relative group">
                <button class="text-[#aaa] hover:text-[#fff] mt-3 transition-colors flex items-center">
                  Details
                  <svg class="w-4 h-4 ml-1 transform group-hover:rotate-180 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
                <div class="absolute right-0 top-full mt-1 bg-[#1a1a1a] border border-[#154733] rounded-lg px-4 py-3 min-w-[280px] text-sm z-10 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all shadow-lg">
                  <div class="text-[#aaa] text-xs">
                    <span class="font-semibold">ID:</span> {cred.credentialId}
                  </div>
                  <a 
                    href={cred.website} 
                    target="_blank" 
                    rel="noopener noreferrer" 
                    class="block text-[#aaa] hover:text-[#fff] transition-colors underline mb-2"
                  >
                    View Certification
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
