---
const experiences = [
  {
    company: "Blue Planet-Green Power & Water, Inc.",
    location: "Redwood City, CA",
    role: "System Maintenance & Repair Engineer - Seasonal",
    duration: "June 2018 – August 2024",
    image: "/images/bp-logo.PNG",
    responsibilities: [
      "Performed routine maintenance and troubleshooting on water filtration systems.",
      "Diagnosed issues and executed intermediate electrical and plumbing repairs to restore system functionality.",
      "Assisted in developing maintenance schedules to improve system reliability.",
    ],
  },
  {
    company: "Central Computers",
    location: "San Mateo, CA",
    role: "Sales Associate – Part Time",
    duration: "April 2020 – September 2021",
    image: "/images/central-computers-logo.jpg",
    responsibilities: [
      "Provided technical support and product recommendations for general and corporate customers.",
      "Effectively communicated complex technical concepts to customers of varying expertise.",
      "Assembled and tested computer systems to ensure quality performance.",
    ],
  },
  {
    company: "Trader Joe’s",
    location: "San Mateo, CA / Eugene, OR",
    role: "Crew Member – Part Time",
    duration: "January 2019 – August 2019 / September 2019 – December 2020",
    image: "/images/trader-joes-logo.png",
    responsibilities: [
      "Provided fast, friendly customer service while handling transactions accurately.",
      "Adapted to shifting priorities in a fast-paced retail environment.",
      "Assisted with merchandising, stocking, and setting up product displays.",
    ],
  },
];
---

<div class="max-w-4xl mx-auto p-4 font-mono leading-relaxed">
  <h2 class="text-2xl font-bold mb-6">Work Experience</h2>
  <div class="grid grid-cols-1 gap-6">
    {experiences.map((experience) => (
      <div class="
        bg-[#252525] p-4 flex
        border-[#154733] border-l-4 md:border-l-4
        rounded-[10px] 
        transition-transform hover:translate-y-[-10px]
      ">
        <img src={experience.image} alt={`${experience.company} logo`} class="flex-shrink-0 w-[100px] h-[100px] mr-5 rounded-full" />
        <div class="flex-1">
        <div class="flex flex-col sm:flex-row justify-between sm:items-center">
          <div>
            <h3 class="text-xl font-semibold">{experience.company}</h3>
            <p class="text-sm text-zinc-400">{experience.role}</p>
            <div class="block sm:hidden mt-2">
              <p class="text-sm text-zinc-400">{experience.location}</p>
              <p class="text-sm text-zinc-400">{experience.duration}</p>
            </div>
          </div>
          <div class="hidden sm:block text-right pt-2">
            <p class="text-sm text-zinc-400">{experience.location}</p>
            <p class="text-sm text-zinc-400">{experience.duration}</p>
          </div>
        </div>
        <ul class="list-disc list-inside space-y-2 mt-4">{experience.responsibilities.map((task) => (<li class="text-sm text-zinc-400">{task}</li>))}</ul>
        </div>
      </div>
    ))}
  </div>
</div>
