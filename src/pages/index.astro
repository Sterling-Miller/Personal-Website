---
import Layout from '../layouts/Layout.astro';
import Profile from '../components/Profile.astro';
import AboutMe from '../components/AboutMe.astro';

export const prerender = true;
---

<Layout title="Sterling Miller">
    <div slot="left">
		<Profile />
    </div>

    <div slot="right">
        <AboutMe />
    </div>
</Layout>

<style>
    h1 {
        margin: 2rem 0;
    }

    div {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    main {
        margin: auto;
        padding: 1em;
        max-width: 60ch;
    }
</style>
