---
import "../styles/global.css";
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="flex flex-col md:flex-row text-lg text-white bg-neutral-900">
    <div
      class="flex flex-col items-center p-4 overflow-hidden md:w-1/3 md:fixed md:h-full md:top-25"
    >
      <slot name="left" />
    </div>

    <div
      class="p-4 flex-col overflow-hidden md:w-2/3 md:ml-[30%] md:overflow-y-auto"
    >
      <slot name="right" />
    </div>
  </body>
</html>
